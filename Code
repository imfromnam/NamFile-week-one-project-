# Step 2
if task == 1:
    path = input("Enter file path? ")
    if os.path.exists(path):
        print("That file location exists. What would you like to do?\n"
              "1) Read file\n"
              "2) Write or overwrite the file\n"
              "3) Move file\n"
              "4) Copy file\n"
              "5) Back to main menu")

        file_list = ["1", "2", "3", "4", "5"]
        file = " "
        while not (file.isdigit() and file in file_list):
            file = input("Choose (1-5): ")
        file = int(file)

        if file == 1:
            try:
                with open(path) as f:
                    print(f.read())
            except FileNotFoundError:
                print("âŒ That file was not found.")

        elif file == 2:
            text = input("What would you like to write into the file?\n")
            try:
                with open(path, "w") as f:
                    f.write(text)
                print("âœ… File written successfully.")
            except:
                print("âŒ Something went wrong writing to the file.")

        elif file == 3:
            new_location = input("Enter destination path to move file: ")
            try:
                shutil.move(path, new_location)
                print("âœ… File moved successfully.")
            except:
                print("âŒ Error moving file.")

        elif file == 4:
            destination = input("Enter destination path to copy file: ")
            try:
                shutil.copyfile(path, destination)
                print("âœ… File copied successfully.")
            except:
                print("âŒ Error copying file.")

        elif file == 5:
            print("ğŸ”™ Going back to main menu...")
            main_menu()

    else:
        print("âŒ That location doesn't exist.")

