    print("3) Remove tasks ")
    print("4) Store in list")
    print("5) back to main menu\n")

    to_list = ["1", "2", "3", "4", "5"]
    do = " "
    while True:
        do = input("Choose (1-5): ")
        if do.isdigit() and do in to_list:
            do = int(do)
            break
        else:
            print("âŒ Invalid input. Please enter a number from 1 to 5.\n")

    dolist = []

    if do == 1:
        add_list = input("Add to your list? ")
        dolist.append(add_list)
        print("Current tasks:")
        for x in dolist:
            print(x)

    if do == 2:
        print("Your to-do list")
        for x in dolist:
            print(x)

    if do == 3:
        print("Your current tasks:")
        for x in dolist:
            print("â€¢", x)
        bye_l = input("Which task do you want to remove? ")
        if bye_l in dolist:
            dolist.remove(bye_l)
            print("âœ… Task removed.")
        else:
            print("âŒ That task is not in your list.")

    if do == 4:
        add_list = input("Add to your list? ")
        dolist.append(add_list)
        print("Stored in list âœ…")

    elif do == 5:
        print("ğŸ”™ Going back to main menu...")
        main_menu()

